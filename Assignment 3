#include <iostream>using namespace std;double convertToMPH(int paceInMin, int paceInSec);double convertToMPH(double kph);double convertToMPH(int paceInMin, int paceInSec){	return(60 / (paceInMin + paceInSec / 60.));}double convertToMPH(double kph){	return (kph / 1.61);}int main(){	int paceInMin;	int paceInSec;	double kph;		cout << "Enter your pace in minutes: ";	cin >> paceInMin;	cout << "Enter your pace in seconds: ";	cin >> paceInSec;	cout << "Your speed in mph is " << convertToMPH(paceInMin, paceInSec) << endl;	cout << "Please enter your speed in kph: ";	cin >> kph;	cout << "Your speed in mph is " << convertToMPH(kph);	return 0;}
